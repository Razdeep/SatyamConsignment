<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.Group?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.*?>
<?import java.net.URL?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextField?>
<Group xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/8.0.111"
       fx:controller="satyamconsignment.ui.Master.Buyer.BuyerController">
    <children>
        <AnchorPane id="AnchorPane" prefHeight="536.0" prefWidth="672.0" styleClass="mainFxmlClass">
            <stylesheets>
                <URL value="@masterbuyer.css"/>
            </stylesheets>
            <children>
                <Text layoutX="263.0" layoutY="55.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Master Buyer">
                    <font>
                        <Font size="31.0"/>
                    </font>
                </Text>
                <Button fx:id="add_btn" layoutX="472.0" layoutY="139.0" onAction="#addMaster" prefHeight="72.0"
                        prefWidth="157.0" text="Add">
                    <graphic>
                        <ImageView fitHeight="49.0" fitWidth="52.0" pickOnBounds="true" preserveRatio="true">
                            <image>
                                <Image url="@../../../icons/MasterAdd.png"/>
                            </image>
                        </ImageView>
                    </graphic>
                    <font>
                        <Font size="16.0"/>
                    </font>
                </Button>
                <ListView fx:id="listView" layoutX="67.0" layoutY="93.0" prefHeight="296.0" prefWidth="262.0"/>
                <Button fx:id="delete_btn" contentDisplay="TOP" layoutX="67.0" layoutY="422.0"
                           onAction="#deleteMaster" prefHeight="90.0" prefWidth="97.0" text="Delete">
                    <graphic>
                        <ImageView fitHeight="49.0" fitWidth="52.0" pickOnBounds="true" preserveRatio="true">
                            <image>
                                <Image url="@../../../icons/MasterDelete.png"/>
                            </image>
                        </ImageView>
                    </graphic>
                    <font>
                        <Font size="16.0"/>
                    </font>
                </Button>
                <Button fx:id="refresh_btn" contentDisplay="TOP" layoutX="221.0" layoutY="422.0"
                           onAction="#refreshList" prefHeight="90.0" prefWidth="108.0" text="Refresh">
                    <graphic>
                        <ImageView fitHeight="49.0" fitWidth="64.0" pickOnBounds="true" preserveRatio="true">
                            <image>
                                <Image url="@../../../icons/Refresh.png"/>
                            </image>
                        </ImageView>
                    </graphic>
                    <font>
                        <Font size="16.0"/>
                    </font>
                </Button>
                <TextField fx:id="add_field" layoutX="353.0" layoutY="93.0" prefHeight="25.0" prefWidth="238.0"
                           promptText="Enter Buyer to add">
                    <font>
                        <Font size="16.0"/>
                    </font>
                </TextField>
                <Button fx:id="rename_btn" layoutX="481.0" layoutY="305.0" onAction="#renameMaster" prefHeight="82.0"
                           prefWidth="165.0" text="Rename">
                    <graphic>
                        <ImageView fitHeight="55.0" fitWidth="49.0" pickOnBounds="true" preserveRatio="true">
                            <image>
                                <Image url="@../../../icons/MasterRename.png"/>
                            </image>
                        </ImageView>
                    </graphic>
                    <font>
                        <Font size="16.0"/>
                    </font>
                </Button>
                <TextField fx:id="rename_field" layoutX="342.0" layoutY="260.0" prefHeight="33.0" prefWidth="290.0"
                              promptText="Enter new Buyer to replace the existing">
                    <font>
                        <Font size="16.0"/>
                    </font>
                </TextField>
            </children>
        </AnchorPane>
    </children>
</Group>
